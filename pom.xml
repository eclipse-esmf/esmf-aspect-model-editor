<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.eclipse.esmf</groupId>
  <artifactId>aspect-model-editor</artifactId>
  <name>ESMF Aspect Model Editor</name>
  <version>DEV-SNAPSHOT</version>

  <packaging>pom</packaging>

  <description>ESMF Aspect Model Editor</description>
  <licenses>
    <license>
      <name>MPL-2.0</name>
      <url>https://www.mozilla.org/en-US/MPL/2.0/</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <name>Eclipse Semantic Modeling Framework Team</name>
      <email>esmf-dev@eclipse.org</email>
      <organization>Eclipse Semantic Modeling Framework</organization>
      <organizationUrl>https://projects.eclipse.org/projects/dt.esmf</organizationUrl>
    </developer>
  </developers>
  <scm>
    <url>https://github.com/eclipse-esmf/esmf-aspect-model-editor</url>
    <connection>scm:git:git://github.com:eclipse-esmf/esmf-aspect-model-editor.git</connection>
    <developerConnection>scm:git:ssh://git@github.com:eclipse-esmf/esmf-aspect-model-editor.git
    </developerConnection>
  </scm>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.eclipse.cbi.maven.plugins</groupId>
          <artifactId>eclipse-dmg-packager</artifactId>
          <version>1.4.3</version>
        </plugin>
        <plugin>
          <groupId>org.eclipse.cbi.maven.plugins</groupId>
          <artifactId>eclipse-macsigner-plugin</artifactId>
          <version>1.4.3</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.eclipse.cbi.maven.plugins</groupId>
        <artifactId>eclipse-dmg-packager</artifactId>
        <version>1.4.3</version>
      </plugin>
      <plugin>
        <groupId>org.eclipse.cbi.maven.plugins</groupId>
        <artifactId>eclipse-macsigner-plugin</artifactId>
        <version>1.4.3</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>mac-signing</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>unzip</id>
                <phase>generate-resources</phase>
                <configuration>
                  <target>
                    <echo message="Unzipping MAC Electron file" />
                    <unzip src="${project.basedir}/aspect-model-editor-v5.1.1-mac.zip" dest="${project.basedir}/electron" />
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
              <execution>
                <id>zip</id>
                <phase>compile</phase>
                <configuration>
                  <target>
                    <!-- Step to delete existing ZIP file if it exists -->
                    <echo message="Checking if ZIP archive exists and deleting if present..."/>
                    <delete file="${project.basedir}/aspect-model-editor-v5.1.1-mac.zip" failonerror="false"/>

                    <!-- Step to create ZIP archive -->
                    <echo message="Creating ZIP archive of electron directory..."/>
                    <zip destfile="${project.basedir}/aspect-model-editor-v5.1.1-mac.zip" basedir="${project.basedir}/electron" />
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.eclipse.cbi.maven.plugins</groupId>
            <artifactId>eclipse-macsigner-plugin</artifactId>
            <executions>
              <execution>
                <id>sign</id>
                <goals>
                  <goal>sign</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <signFiles>
                    <signFile>${project.basedir}/electron/Aspect-Model-Editor.app</signFile>
                  </signFiles>
                  <timeoutMillis>300000</timeoutMillis>
                  <continueOnFail>${macSigner.forceContinue}</continueOnFail>
                  <entitlements>${project.basedir}/entitlements.plist</entitlements>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.eclipse.cbi.maven.plugins</groupId>
            <artifactId>eclipse-dmg-packager</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>package-dmg</goal>
                </goals>
                <phase>integration-test</phase>
                <configuration>
                  <source>${project.basedir}/aspect-model-editor-v5.1.1-mac.zip</source>
                  <continueOnFail>true</continueOnFail>
                  <timeoutMillis>600000</timeoutMillis>
                  <continueOnFail>${macSigner.forceContinue}</continueOnFail>
                  <sign>true</sign>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <repositories>
    <repository>
      <id>central</id>
      <name>Maven Central</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>central</id>
      <name>Maven Central</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </pluginRepository>
      <pluginRepository>
        <id>cbi</id>
        <url>https://repo.eclipse.org/content/repositories/cbi-releases/</url>
      </pluginRepository>
      <pluginRepository>
        <id>cbi-snapshots</id>
        <url>https://repo.eclipse.org/content/repositories/cbi-snapshots/</url>
        <snapshots>
          <enabled>true</enabled>
        </snapshots>
      </pluginRepository>
  </pluginRepositories>
</project>
